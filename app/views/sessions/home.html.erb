<div class="jumbotron jumbotron-fluid">
  <div class="container">  
    <h1>HomeReno</h1>
    <h3>The app for DIY and home improvement enthusiasts.</h3>
  <hr>
  </div>
</div>

<div class="row">
  <h2>Popular Projects</h2>
  <% @projects.each do |p| %>
    <% if logged_in? %>
      <p><%= link_to p.title, project_path(p) %> by <%= p.user.username %> | <%= p.comments.count%> people talking about this project</p>
    <% else %>
      <p><%= p.title %> by <%= p.user.username %> | <%= p.comments.count%> people talking about this project</p>
    <% end %>
    <hr>
  <% end %>
</div>

<div class="row">
<% if logged_in? %>
  <%= link_to "Start a New Project", new_project_path, class: "btn btn-primary" %>
<% else %>
  <h3>Become a Member</h3>
  <p><%= link_to "Sign up", :signup, :class => 'navbar-link', class: 'btn btn-primary'  %></p>
  <p>Already a member? <%= link_to "Login", :login, :class => 'navbar-link'  %></p>
<% end %>
</div>